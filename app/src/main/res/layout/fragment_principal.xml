<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Botón de menú -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/descripcion_boton_menu"
        app:srcCompat="@drawable/menu_24"
        app:tint="@color/iconColor"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Imagen de perfil -->
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_perfil"
        app:tint="#B0B0B0"
        android:scaleType="centerInside"
        android:background="@drawable/circle_background"
        android:contentDescription="@string/descripcion_imagen_perfil"
        app:layout_constraintTop_toBottomOf="@id/btnMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre -->
    <TextView
        android:id="@+id/txtNombre"
        style="@style/PerfilTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_usuario"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Profesión -->
    <TextView
        android:id="@+id/txtProfesion"
        style="@style/PerfilSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profesion_usuario"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card con información de contacto -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtProfesion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtUbicacion"
                style="@style/PerfilContactoTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ubicacion_usuario"
                app:drawableStartCompat="@drawable/ic_location"
                android:drawablePadding="8dp" />

            <TextView
                android:id="@+id/txtCorreo"
                style="@style/PerfilContactoTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/correo_usuario"
                app:drawableStartCompat="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtTelefono"
                style="@style/PerfilContactoTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/telefono_usuario"
                app:drawableStartCompat="@drawable/ic_phone"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/txtExperiencia"
                style="@style/PerfilContactoTexto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiencia_usuario"
                app:drawableStartCompat="@drawable/ic_calendar"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card "Acerca de mí" -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAcercaDeMi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardContacto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtTituloAcercaDeMi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_acerca_de_mi"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/txtAcercaDeMi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/acerca_de_mi"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
