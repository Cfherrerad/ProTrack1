                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-commerce Platform"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp"/>

                        <!-- Descripción -->
