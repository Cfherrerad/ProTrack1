<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título del proyecto -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="E-commerce Platform"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:gravity="start"
                android:layout_marginBottom="24dp"/>

            <!-- Imagen del proyecto -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:background="#F0F0F0"
                android:contentDescription="E-commerce Platform"/>

            <!-- Descripción del proyecto -->
            <TextView
                android:id="@+id/textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desarrollé una plataforma completa de e-commerce utilizando React y Node.js. Incluye funcionalidades como gestión de productos, carrito de compras, sistema de pagos con Stripe, y un panel de administración para gestionar pedidos e inventario. La aplicación maneja más de 10,000 productos y procesa cientos de transacciones diarias."
                android:textSize="16sp"
                android:textColor="#333333"
                android:lineSpacingExtra="6dp"
                android:textAlignment="viewStart"
                android:layout_marginBottom="32dp"/>

            <!-- Sección de tecnologías -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tecnologías utilizadas:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp"/>

            <!-- Tecnologías -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="React"
                    android:textSize="12sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:background="#E3F2FD"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Node.js"
                    android:textSize="12sp"
                    android:textColor="#7B1FA2"
                    android:textStyle="bold"
                    android:background="#F3E5F5"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MongoDB"
                    android:textSize="12sp"
                    android:textColor="#388E3C"
                    android:textStyle="bold"
                    android:background="#E8F5E8"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1"
                    android:textSize="12sp"
                    android:textColor="#F57C00"
                    android:textStyle="bold"
                    android:background="#FFF3E0"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>

            </LinearLayout>

            <!-- Botón Cerrar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCerrarDialog"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Cerrar"
                android:textSize="16sp"
                app:backgroundTint="#2196F3"
                app:cornerRadius="25dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>